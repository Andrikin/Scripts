#!/usr/bin/env bash
# Script player para arquivos de audio

PLAYER="mplayer"
OPTIONS_PLAYER="-really-quiet"
ID_MUSICA=$(pgrep -f "^$PLAYER")

[[ $ID_MUSICA != '' ]] && kill "$ID_MUSICA"

# Dar update no statusbar
sleep 1
kill_sleep

$PLAYER $OPTIONS_PLAYER "$1"
#if [[ $1 != *.mp3 ]]; then
#	play "$1"
#else
#	ffplay -loglevel quiet -nodisp -autoexit "$1"
#fi

sleep 1
kill_sleep
