#!/usr/bin/env bash
# Script player para arquivos de audio

MUSICA="$1"
PLAYER=(mplayer -really-quiet)
ID_MUS=$(pgrep -f "^$PLAYER")

# Dar update no statusbar
atualizar_statusbar(){
	"$HOME"/.config/lemonbar/run_lemonbar &
}

play_music(){
	atualizar_statusbar
	"${PLAYER[@]}" "$MUSICA"
}

main(){
	[[ $ID_MUS != '' ]] && kill "$ID_MUS"
	play_music
	atualizar_statusbar
}

main
